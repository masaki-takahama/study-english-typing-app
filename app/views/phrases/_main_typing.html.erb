<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <% @phrases.each do |phrase| %>
     <%= image_tag phrase.image.variant(resize: '400x400'), class: 'message-image' %>
      <p><%= phrase.text %></p>
      <span class="name">
        <%= phrase.meaning %>
      </span>
    </div>
  <% end %>
</div>



<%= form_with model: @phrase, url: phrases_path, method: :post , class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :text, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <div class="form-meaning">
    <%= f.text_field :meaning, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <div class="form-image">
      <%= f.file_field :image, class: 'form-message' %>
  </div>
  <div class="form-tag">
    <%= f.collection_select(:tag_id, Tag.all, :id, :name, {}, {class:"form-message"}) %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>